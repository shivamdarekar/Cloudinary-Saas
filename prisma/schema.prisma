generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Image {
  id              String @id @default(cuid())
  title           String?
  publicId        String
  originalSize    Int
  compressedSize  Int?
  format          String
  width           Int?
  height          Int?
  processType     String // 'compress', 'background-remove', 'optimize', 'auto-tag'
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          String
}
